@{
    ViewData["Title"] = "Link Owner to Store - PlayStation Cafe";
}

<h2 class="text-center mb-4">Link Owner to Store</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="linkOwnerForm" method="post" asp-action="LinkOwnerToStore" asp-controller="Admin">
            <div class="mb-3">
                <label for="email" class="form-label">Owner Email</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="mb-3">
                <label for="storeId" class="form-label">Store</label>
                <select class="form-control" id="storeId" name="storeId" required>
                    <option value="">Select Store</option>
                    @foreach (var store in ViewBag.Stores)
                    {
                        <option value="@store.Id">@store.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Link Owner to Store</button>
        </form>
    </div>
</div>