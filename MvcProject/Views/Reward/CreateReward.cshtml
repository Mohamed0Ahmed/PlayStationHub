@{
    ViewData["Title"] = "Add Reward";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mb-4">Add Reward</h2>

        <form asp-action="CreateReward" method="post">
            <div class="mb-3">
                <label for="branchId" class="form-label">Branch ID</label>
                <input type="number" class="form-control" id="branchId" name="branchId" required />
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Reward Name</label>
                <input type="text" class="form-control" id="name" name="name" required />
            </div>
            <div class="mb-3">
                <label for="requiredPoints" class="form-label">Required Points</label>
                <input type="number" class="form-control" id="requiredPoints" name="requiredPoints" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Add Reward</button>
        </form>
    </div>
</div>